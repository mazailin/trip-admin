<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ulplanet.trip.modules.iom.dao.ProductDao">

    <sql id="productColumns">
        `id`,
        `name`,
        `code`,
        `unit`,
        `avg_price`,
        `total_amt`,
        `rent_amt`,
        `rsv_amt`,
        `avl_amt`,
        `low_limit`,
        `use_detail`,
        `comment`
    </sql>
	<select id="findList" resultType="Product">
		SELECT
            <include refid="productColumns"/>
        FROM product
        WHERE del_flag = #{DEL_FLAG_NORMAL}
        <if test="name != null and name != ''">
            AND name like CONCAT('%', #{name}, '%')
        </if>
        <choose>
            <when test="page !=null and page.orderBy != null and page.orderBy != ''">
                ORDER BY ${page.orderBy}
            </when>
            <otherwise>
                ORDER BY name
            </otherwise>
        </choose>
	</select>
    <select id="findUseDetailList" resultType="Product">
        SELECT
        <include refid="productColumns"/>
        FROM product
        WHERE del_flag = #{DEL_FLAG_NORMAL}
        AND use_detail = #{USE_DETAIL_YES}
    </select>
    <select id="findNUseDetailList" resultType="Product">
        SELECT
        <include refid="productColumns"/>
        FROM product
        WHERE del_flag = #{DEL_FLAG_NORMAL}
        AND use_detail = #{USE_DETAIL_NO}
    </select>
    <select id="get" resultType="Product">
        SELECT
        <include refid="productColumns"/>
        FROM product
        WHERE id = #{id}
    </select>
	<insert id="insert">
        INSERT INTO product(
            `id`,
            `name`,
            `code`,
            `unit`,
            `avg_price`,
            `total_amt`,
            `rent_amt`,
            `rsv_amt`,
            `avl_amt`,
            `low_limit`,
            `use_detail`,
            `comment`,
            `create_by`,
            `create_date`,
            `update_by`,
            `update_date`,
            `remarks`,
            `del_flag`
        ) VALUES (
            #{id},
            #{name},
            #{code},
            #{unit},
            #{avgPrice},
            #{totalAmt},
            #{rentAmt},
            #{rsvAmt},
            #{avlAmt},
            #{lowLimit},
            #{useDetail},
            #{comment},
            #{createBy.id},
            #{createDate},
            #{updateBy.id},
            #{updateDate},
            #{remarks},
            #{delFlag}
        )
	</insert>
	
	<update id="update">
        UPDATE product SET
            `name` = #{name},
            `code` = #{code},
            `unit` = #{unit},
            `avg_price` = #{avgPrice},
            `total_amt` = #{totalAmt},
            `rent_amt` = #{rentAmt},
            `rsv_amt` = #{rsvAmt},
            `avl_amt` = #{avlAmt},
            `low_limit` = #{lowLimit},
            `use_detail` = #{useDetail},
            `comment` = #{comment},
            `update_by` = #{updateBy.id},
            `update_date` = #{updateDate},
            `remarks` = #{remarks}
        WHERE id = #{id}
	</update>
    <update id="updateAvlPrice">
        UPDATE product
        SET avg_price = (
            SELECT
                SUM(total_price) / SUM(buy_amount)
            FROM
                product_in
            WHERE
                product_id = product.id
                AND del_flag = #{DEL_FLAG_NORMAL}
        )
        WHERE
            id = #{id}
    </update>
	<delete id="delete">
		UPDATE product SET del_flag = #{DEL_FLAG_DELETE} WHERE id = #{id}
	</delete>
</mapper>