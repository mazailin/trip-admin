<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ulplanet.trip.modules.iom.dao.ReturnDao">

    <sql id="returnColumns">
        a.`id`,
        a.`rent_id` AS 'rent.id',
        b.`code` AS 'rent.code',
        a.`code`,
        a.`operator`,
        a.`return_date`,
        a.`comment`
    </sql>
	<select id="findList" resultType="Return">
		SELECT
            <include refid="returnColumns"/>
        FROM `return` a
        JOIN rent b
        ON a.`rent_id` = b.id
        WHERE a.del_flag = #{DEL_FLAG_NORMAL}
        <if test="code != null and code != ''">
            AND a.`code` like CONCAT('%', #{code}, '%')
        </if>
        <choose>
            <when test="page !=null and page.orderBy != null and page.orderBy != ''">
                ORDER BY ${page.orderBy}
            </when>
            <otherwise>
                ORDER BY a.`code`
            </otherwise>
        </choose>
	</select>
    <select id="get" resultType="Return">
        SELECT
        <include refid="returnColumns"/>
        FROM `return` a
        JOIN rent b
        ON a.`rent_id` = b.id
        WHERE a.id = #{id}
    </select>
	<insert id="insert">
        INSERT INTO `return`(
            `id`,
            `code`,
            `rent_id`,
            `operator`,
            `return_date`,
            `comment`,
            `create_by`,
            `create_date`,
            `update_by`,
            `update_date`,
            `remarks`,
            `del_flag`
        ) VALUES (
            #{id},
            #{code},
            #{rent.id},
            #{operator},
            #{returnDate},
            #{comment},
            #{createBy.id},
            #{createDate},
            #{updateBy.id},
            #{updateDate},
            #{remarks},
            #{delFlag}
        )
	</insert>
	
	<update id="update">
        UPDATE `return` SET
            `operator` = #{operator},
            `return_date` = #{returnDate},
            `comment` = #{comment}
        WHERE id = #{id}
	</update>
	<delete id="delete">
		UPDATE `return` SET del_flag = #{DEL_FLAG_DELETE} WHERE id = #{id}
	</delete>
</mapper>