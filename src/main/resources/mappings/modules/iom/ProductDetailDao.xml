<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ulplanet.trip.modules.iom.dao.ProductDetailDao">

    <sql id="proDetailColumns">
        a.`id`,
        b.`id` AS 'product.id',
        b.`name` AS 'product.name',
        b.`code` AS 'product.code',
        a.`code`,
        a.`device`,
        a.`status`,
        a.`comment`
    </sql>
	<select id="findList" resultType="ProductDetail">
		SELECT
            <include refid="proDetailColumns"/>
        FROM product_detail a
        JOIN product b
        ON a.product_id = b.id
        WHERE a.del_flag = #{DEL_FLAG_NORMAL}
        AND b.del_flag = #{DEL_FLAG_NORMAL}
        <if test="device != null and device != ''">
            AND a.device like CONCAT('%', #{device}, '%')
        </if>
        <if test="product != null and product.id != null and product.id != ''">
            AND b.id = #{product.id}
        </if>
        <choose>
            <when test="page !=null and page.orderBy != null and page.orderBy != ''">
                ORDER BY ${page.orderBy}
            </when>
            <otherwise>
                ORDER BY a.code
            </otherwise>
        </choose>
	</select>
    <select id="findInDetailList" resultType="ProductDetail">
        SELECT
        <include refid="proDetailColumns"/>
        FROM product_detail a
        JOIN product b
        ON a.product_id = b.id
        JOIN in_detail c
        ON a.id = c.pro_detail_id
        WHERE c.in_id = #{inId}
        <if test="device != null and device != ''">
            AND a.device like CONCAT('%', #{device}, '%')
        </if>
        <if test="product != null and product.id != null and product.id != ''">
            AND b.id = #{product.id}
        </if>
        <choose>
            <when test="page !=null and page.orderBy != null and page.orderBy != ''">
                ORDER BY ${page.orderBy}
            </when>
            <otherwise>
                ORDER BY a.code
            </otherwise>
        </choose>
    </select>
    <select id="findAvlList" resultType="ProductDetail">
        SELECT
        <include refid="proDetailColumns"/>
        FROM product_detail a
        JOIN product b
        ON a.product_id = b.id
        WHERE a.del_flag = #{DEL_FLAG_NORMAL}
        AND b.del_flag = #{DEL_FLAG_NORMAL}
        AND a.status = '3'
        ORDER BY a.code
    </select>
    <select id="get" resultType="ProductDetail">
        SELECT
          <include refid="proDetailColumns"/>
        FROM product_detail a
        JOIN product b
        ON a.product_id = b.id
        WHERE a.id = #{id}
    </select>
	<insert id="insert">
        INSERT INTO product_detail(
            `id`,
            `product_id`,
            `code`,
            `device`,
            `status`,
            `comment`,
            `create_by`,
            `create_date`,
            `update_by`,
            `update_date`,
            `remarks`,
            `del_flag`
        ) VALUES (
            #{id},
            #{product.id},
            #{code},
            #{device},
            #{status},
            #{comment},
            #{createBy.id},
            #{createDate},
            #{updateBy.id},
            #{updateDate},
            #{remarks},
            #{delFlag}
        )
	</insert>
	
	<update id="update">
        UPDATE product_detail SET
            `product_id` = #{product.id},
            `device` = #{device},
            `status` = #{status},
            `comment` = #{comment},
            `update_by` = #{updateBy.id},
            `update_date` = #{updateDate},
            `remarks` = #{remarks}
        WHERE id = #{id}
	</update>
	<delete id="delete">
		UPDATE product_detail SET del_flag = #{DEL_FLAG_DELETE} WHERE id = #{id}
	</delete>
</mapper>