<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ulplanet.trip.modules.iom.dao.RentDao">

    <sql id="rentColumns">
        `id`,
        `code`,
        `renter`,
        `operator`,
        `status`,
        `deposit`,
        `rent_date`,
        `return_date`,
        `comment`
    </sql>
	<select id="findList" resultType="Rent">
		SELECT
            <include refid="rentColumns"/>
        FROM rent
        WHERE del_flag = #{DEL_FLAG_NORMAL}
        <if test="code != null and code != ''">
            AND `code` like CONCAT('%', #{code}, '%')
        </if>
        <choose>
            <when test="page !=null and page.orderBy != null and page.orderBy != ''">
                ORDER BY ${page.orderBy}
            </when>
            <otherwise>
                ORDER BY `code`
            </otherwise>
        </choose>
	</select>
    <select id="get" resultType="Rent">
        SELECT
        <include refid="rentColumns"/>
        FROM rent
        WHERE id = #{id}
    </select>
	<insert id="insert">
        INSERT INTO rent(
            `id`,
            `code`,
            `renter`,
            `operator`,
            `status`,
            `deposit`,
            `rent_date`,
            `return_date`,
            `comment`,
            `create_by`,
            `create_date`,
            `update_by`,
            `update_date`,
            `remarks`,
            `del_flag`
        ) VALUES (
            #{id},
            #{code},
            #{renter},
            #{operator},
            #{status},
            #{deposit},
            #{rentDate},
            #{returnDate},
            #{comment},
            #{createBy.id},
            #{createDate},
            #{updateBy.id},
            #{updateDate},
            #{remarks},
            #{delFlag}
        )
	</insert>
	
	<update id="update">
        UPDATE rent SET
            `renter` = #{renter},
            `operator` = #{operator},
            `status` = #{status},
            `deposit` = #{deposit},
            `rent_date` = #{rentDate},
            `return_date` = #{returnDate},
            `comment` = #{comment}
        WHERE id = #{id}
	</update>
	<delete id="delete">
		UPDATE rent SET del_flag = #{DEL_FLAG_DELETE} WHERE id = #{id}
	</delete>
</mapper>