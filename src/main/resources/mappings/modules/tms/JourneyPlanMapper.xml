    <delete id="delete">
            DELETE FROM journey_plan
            <where>
                <if test="id!=null and id!=''">
                    id = #{id}
                </if>
                <if test="dayId!=null and dayId!=''">
                    day_id = #{dayId}
                </if>
            </where>
    </delete>
    
    <select id="getById" resultMap="JourneyPlan">
		SELECT <include refid="BaseColumns" />
	    <![CDATA[
		    FROM journey_plan 
	        WHERE 
		        id = #{id} 
	    ]]>
	</select>


    <select id="findList" resultMap="JourneyPlan">
        SELECT <![CDATA[
            jp.id,jp.day_id,jp.type,jp.name as name,jp.time,jp.time_flag,jp.description,
            jp.message,jp.message_flag,jp.sort,jp.type as typeValue,jp.longitude as longitude,jp.latitude as latitude
	    ]]>
        <![CDATA[
		    FROM journey_plan jp
	        WHERE
		        jp.day_id = #{dayId}
		    ORDER BY jp.sort ASC
	    ]]>
    </select>
	

		
    <select id="findPageCount" resultType="long">
        SELECT count(1) FROM journey_plan
		<include refid="BaseWhere"/>
    </select>

    <select id="findPage" resultMap="JourneyPlan">
    	SELECT <include refid="BaseColumns" />
	    FROM journey_plan 
		<include refid="BaseWhere"/>
    </select>

	
</mapper>

